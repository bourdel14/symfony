{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

	
	{% extends "OCPlatformBundle::layout.html.twig" %}

{% block ocplatform_body %}

	<div class="container">

		{% for advert in listAdverts %}

		

			<div class="card">

				<div class="card-block">

					<h4 class="card-title">{{ advert.title}}</h4>

					<hr>

				</div>

				<div class="card-data">

		            <p> Publié le {{ advert.date|date("d/m/Y")}} par {{ advert.author}}</p>

		            <a href="{{ path("oc_platform_view", { 'id': advert.id }) }}" class="link-text" style="color:white;"><h5>Read more<i class="fa fa-chevron-right"></i></h5></a>
    			
    			</div>

			</div>

		{% endfor %}

		    <ul class="pagination">
		        <!--Numbers-->
		        {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
				{% for p in range(1, nbPages) %}
				    <li{% if p == page %} class="page-item"{% endif %}>
				      <a class="page-link" href="{{ path('oc_platform_home', {'page': p}) }}">{{ p }}</a>
				    </li>
				{% endfor %}
		    </ul>


{% endblock %}